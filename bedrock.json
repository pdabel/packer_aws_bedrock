{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "bedrock_zip_file": "",
        "aws_ami_name": "minecraft-bedrock",
        "ubuntu_ami_base_image_name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "eu-west-1",
            "source_ami_filter": {
              "filters": {
                "virtualization-type": "hvm",
                "name": "{{user `ubuntu_ami_base_image_name`}}",
                "root-device-type": "ebs"
              },
              "owners": ["099720109477"],
              "most_recent": true
            },
            "instance_type": "t2.micro",
            "ssh_username": "ubuntu",
            "ami_name": "{{user `aws_ami_name`}}",
            "force_deregister": "true",
            "force_delete_snapshot": "true"
          }
    ],
    "provisioners": [
        {
            "destination": "/tmp/",
            "source": "{{user `bedrock_zip_file`}}",
            "type": "file"
        },    
        {
            "inline": [
                "sudo apt install unzip; sudo mkdir /usr/local/bedrock/; cd /usr/local/bedrock && sudo unzip /tmp/bedrock-server-1.16.40.02.zip"
            ],
            "type": "shell"
        }
    ]

}
